{
  "name": "node-tado-client",
  "version": "0.20.1",
  "description": "A Tado client for nodejs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattdavis90/node-tado-client.git"
  },
  "author": "Matt Davis <mattdavis90@googlemail.com>",
  "contributors": [
    "Arun Babu Neelicattu <arun.neelicattu@gmail.com>",
    "Fabien JUIF <fabien.juif@gmail.com>"
  ],
  "license": "MIT",
  "homepage": "https://github.com/mattdavis90/node-tado-client#readme",
  "bugs": {
    "url": "https://github.com/mattdavis90/node-tado-client/issues"
  },
  "keywords": [
    "tado",
    "tado-api"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:docs": "npx typedoc",
    "test": "nyc mocha --loader=tsx test/*.ts",
    "format": "prettier -w -u .",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "simple-oauth2": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.9.3",
    "@types/simple-oauth2": "^5.0.7",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "mocha": "^10.8.2",
    "nock": "^13.5.6",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typedoc": "^0.26.11",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*": [
      "prettier -w -u ."
    ]
  },
  "mocha": {
    "node-option": [
      "import=tsx"
    ]
  }
}
